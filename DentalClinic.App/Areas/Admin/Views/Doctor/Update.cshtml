@using DentalClinic.Core.Consts
@model DentalClinic.Core.ViewModels.DoctorVMs.UpdateDoctorVM
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="modal fade" id="kt_modal_update" tabindex="-1" data-bs-backdrop="static" aria-hidden="true">
    <!--begin::Modal dialog-->
    <div class="modal-dialog modal-dialog-centered mw-650px">
        <!--begin::Modal content-->
        <div class="modal-content">
            <!--begin::Form-->
            <form class="form" method="post" enctype="multipart/form-data" id="kt_modal_update_form">
                
                <!--begin::Modal header-->
                <div class="modal-header" id="kt_modal_update_header">
                    <!--begin::Modal title-->
                    <h1 class="modal-title">تحديث بيانات الطبيب</h1>
                    <!--end::Modal title-->
                    <!--begin::Close-->
                    <div class="btn btn-sm btn-icon btn-active-color-primary btn-hide" data-bs-dismiss="modal">
                        <!--begin::Svg Icon | path: icons/duotune/arrows/arr061.svg-->
                        <span class="svg-icon svg-icon-1">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1" transform="rotate(-45 6 17.3137)" fill="currentColor" />
                                <rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)" fill="currentColor" />
                            </svg>
                        </span>
                        <!--end::Svg Icon-->
                    </div>
                    <!--end::Close-->
                </div>
                <!--end::Modal header-->
                <!--begin::Modal body (Scrollable)-->
                <div class="modal-body py-10 px-lg-17" style="max-height: 70vh; overflow-y: auto;">
                    <div class="row mb-5">
                        <div class="col-md-6 fv-row">
                            <label class="required fs-3 fw-semibold mb-2" asp-for="Name">الاسم</label>
                            <input type="text" asp-for="Name" class="form-control fs-4 form-control-solid" required />
                        </div>
                        <div class="col-md-6 fv-row">
                            <label class="required fs-3 fw-semibold mb-2" asp-for="DateOfBirth">تاريخ الميلاد</label>
                            <input type="date" asp-for="DateOfBirth" class="form-control fs-4 form-control-solid" required />
                        </div>
                    </div>

                    <div class=" row mb-5">
                        <div class="col-md-6 fv-row">
                            <label class="required fs-3 fw-semibold mb-2" asp-for="Gender">الجنس</label>
                            <select class="form-control fs-4 form-control-solid" asp-for="Gender" required>
                                <option value="@Gender.Male" selected="@((Model.Gender == Gender.Male) ? "selected" : null)">ذكر</option>
                                <option value="@Gender.Female" selected="@((Model.Gender == Gender.Female) ? "selected" : null)">أنثى</option>
                            </select>
                        </div>
                        <div class="col-md-6 fv-row">
                            <label class="required fs-3 fw-semibold mb-2" asp-for="JobNumber">الرقم الوظيفي</label>
                            <input type="number" asp-for="JobNumber" class="form-control fs-4 form-control-solid" required />
                        </div>
                    </div>

                    <div class=" row mb-5">
                        <div class="col-md-6 fv-row">
                            <label class="required fs-3 fw-semibold mb-2" asp-for="ExperienceYears">سنوات الخبرة</label>
                            <input type="number" asp-for="ExperienceYears" class="form-control fs-4 form-control-solid" required />
                        </div>
                        <div class="col-md-6 fv-row">
                            <label class="required fs-3 fw-semibold mb-2" asp-for="GraduationYear">سنة التخرج</label>
                            <input type="number" asp-for="GraduationYear" class="form-control fs-4 form-control-solid" required />
                        </div>
                    </div>

                    <div class=" row mb-5">
                        <div class="col-md-6 fv-row">
                            <label class="required fs-3 fw-semibold mb-2" asp-for="Phone">رقم الجوال</label>
                            <input type="number" asp-for="Phone" class="form-control fs-4 form-control-solid" required />
                        </div>
                        <div class="col-md-6 fv-row">
                            <label class="required fs-3 fw-semibold mb-2" asp-for="RoomId">الغرفة</label>
                            <select asp-for="RoomId" class="form-control fs-4 form-control-solid" required>
                                @foreach (var room in Model.Rooms)
                                {
                                    <option value="@room.Id" selected="@((room.Id == Model.RoomId) ? "selected" : null)">
                                        @room.Number
                                    </option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="mb-5">
                        <label class="required fs-3 fw-semibold mb-2" asp-for="Email">الإيميل</label>
                        <input type="email" asp-for="Email" class="form-control fs-4 form-control-solid" required />
                    </div>

                    <div class="mb-5">
                        <label class="fs-3 fw-semibold mb-2" asp-for="Image">الصورة (اختياري)</label>
                        <img src="~/AppImages/DoctorImages/@Model.ImageName" style="width: 110px; height: 110px; object-fit: cover; border-radius: 50%;" alt="Doctor Image">
                        <input type="file" asp-for="Image" class="form-control fs-4 form-control-solid" />
                        <input asp-for="Id" hidden />
                    </div>
                </div>
                <!--end::Modal body-->
                <!--begin::Modal footer (Buttons as per your original layout)-->
                <div class="modal-footer flex-center">
                    <button type="reset" data-bs-dismiss="modal" class="btn btn-light me-3 fs-4 btn-closee">إخفاء</button>
                    <button type="submit" id="kt_modal_update_submit" class="btn btn-primary">
                        <span class="indicator-label fs-4">تحديث</span>
                        <span class="indicator-progress">
                            الرجاء الانتظار...
                            <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                        </span>
                    </button>
                </div>
                <!--end::Modal footer-->
            </form>
            <!--end::Form-->
        </div>
    </div>
</div>