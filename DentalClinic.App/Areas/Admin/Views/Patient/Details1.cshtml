@using DentalClinic.Core.Consts
@model DentalClinic.Core.ViewModels.PatientVMs.DetailsPatientVM
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section Links {
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            padding: 20px;
        }

        .container {
            margin-bottom: 15px;
            margin-top: 15px;
        }

        .patient-card {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .patient-info {
            flex-grow: 1;
            text-align: center;
        }

        .visits {
            display: flex;
            justify-content: center;
            gap: 5px;
        }

        .visit-badge {
            background-color: #98db73;
            color: #fff;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 14px;
        }

        .info-grid {
            display: flex;
            justify-content: space-around;
            margin-top: 15px;
            font-size: 18px;
            font-weight: bold;
        }

        .btn-green {
            background-color: #98db73;
            color: white;
            border: none;
            padding: 10px;
            margin-top: 10px;
            width: 100%;
            border-radius: 5px;
        }

        .patient-image {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            border: 3px solid #ddd;
            display: block;
            margin: auto;
        }

        .patient-name {
            font-size: 18px;
            font-weight: bold;
            margin-top: 10px;
        }

        .blood-type {
            font-size: 14px;
            color: gray;
        }

        .main-card {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        input{
            text-align: center;
        }

        .row{
            margin-bottom: 15px;
        }

    </style>
}

    <div class="container">
        <div class="patient-card">
            <!-- Right Section -->
            <div class="text-center">
                <img src="https://cdn-icons-png.flaticon.com/512/847/847969.png" class="patient-image" alt="Patient Image">
                <p class="patient-name">@Model.Name</p>
                <p class="blood-type">@Model.Address</p>

                <button class="btn-green">حجز موعد زيارة جديدة</button>
                <button class="btn-green">رسالة تذكير بالرصيد</button>
            </div>

            <!-- Left Section -->
            <div class="patient-info">
                <h2 style="color: #e85b82;">6</h2>
                <p>عدد الزيارات</p>
                <div class="visits">
                    <span class="visit-badge">6</span>
                    <span class="visit-badge">5</span>
                    <span class="visit-badge">4</span>
                    <span class="visit-badge">3</span>
                    <span class="visit-badge">2</span>
                    <span class="visit-badge">1</span>
                </div>

                <div class="info-grid">
                    <span>العمر: <b>@Model.Age</b></span>
                    <span>الرصيد: <b>0</b></span>
                    <span>فصيلة الدم:</span>
                </div>
            </div>

                                    
        </div>
    </div>

                        
<div class="container">
    <div class="main-card">

        <!-- First Row -->
        <div class="row">
            <div class="col">
                <label class=" fs-3 fw-semibold mb-2" asp-for="Name">الاسم</label>
                <input type="text" asp-for="Name" class="form-control fs-4 form-control-solid" disabled />
            </div>
            <div class="col">
                <label class=" fs-3 fw-semibold mb-2" asp-for="DateOfBirth">تاريخ الميلاد</label>
                <input type="date" asp-for="DateOfBirth" class="form-control fs-4 form-control-solid" disabled />
            </div>
        </div>

        <!-- Second Row -->
        <div class="row">
            <div class="col">
                <!--begin::Label-->
                <label class=" fs-3 fw-semibold mb-2" asp-for="Gender">الجنس</label>
                <!--end::Label-->
                <!--begin::Input-->
                <select asp-for="Gender" class="form-control fs-4 form-control-solid" disabled>
                    <option value="@Gender.Male">ذكر</option>
                    <option value="@Gender.Female">انثى</option>
                </select>
                <!--end::Input-->
            </div>
            <div class="col">
                <!--begin::Label-->
                <label class=" fs-3 fw-semibold mb-2" asp-for="Job">الوظيفة</label>
                <!--end::Label-->
                <!--begin::Input-->
                <input type="text" asp-for="Job" class="form-control fs-4 form-control-solid" placeholder="" disabled />
                <!--end::Input-->
            </div>
        </div>

        <!-- Third Row -->
        <div class="row">
            <div class="col">
                <!--begin::Label-->
                <label class=" fs-3 fw-semibold mb-2" asp-for="Address">العنوان</label>
                <!--end::Label-->
                <!--begin::Input-->
                <input type="text" asp-for="Address" class="form-control fs-4 form-control-solid" placeholder="" disabled />
                <!--end::Input-->
            </div>
            <div class="col">
                <!--begin::Label-->
                <label class=" fs-3 fw-semibold mb-2" asp-for="PersonalIDNumber">رقم الهوية</label>
                <!--end::Label-->
                <!--begin::Input-->
                <input type="number" asp-for="PersonalIDNumber" class="form-control fs-4 form-control-solid" placeholder="" disabled />
                <!--end::Input-->
            </div>
        </div>
                                
        <!-- Third Row -->
        <div class="row">
            <div class="col">
                <label class=" fs-3 fw-semibold mb-2" asp-for="Firstphone">رقم الجوال الرئيسي</label>
                <input type="number" asp-for="Firstphone" class="form-control fs-4 form-control-solid" disabled />
            </div>
            <div class="col">
                <label class=" fs-3 fw-semibold mb-2" asp-for="Secondphone">رقم الجوال الثانوي</label>
                <input type="number" asp-for="Secondphone" class="form-control fs-4 form-control-solid" disabled />
            </div>
        </div>
        <div class="row">
            <!--begin::Label-->
            <label class=" fs-3 fw-semibold mb-2" asp-for="InsuranceCardNumber">بطاقة التأمين</label>
            <!--end::Label-->
            <!--begin::Input-->
            <input type="text" asp-for="InsuranceCardNumber" class="form-control fs-4 form-control-solid" placeholder="" disabled />
            <!--end::Input-->
        </div>
        <div class="row">
            <!--begin::Label-->
            <label class=" fs-3 fw-semibold mb-2" asp-for="Notes">ملاحظات أخرى</label>
            <!--end::Label-->
            <!--begin::Input-->
            <textarea asp-for="Notes" class="form-control fs-4 form-control-solid" rows="6" disabled></textarea>
            <!--end::Input-->
        </div>

        
    </div>
</div>
              



@section Scripts
{
}