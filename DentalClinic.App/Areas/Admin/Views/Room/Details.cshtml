@{
}



<div class="modal fade" id="kt_modal_details" tabindex="-1" data-bs-backdrop="static" aria-hidden="true">
    <!--begin::Modal dialog-->
    <div class="modal-dialog modal-dialog-centered mw-650px">
        <!--begin::Modal content-->
        <div class="modal-content">
            <!--begin::Form-->
            <form class="form" method="post" enctype="multipart/form-data" id="kt_modal_details_form">
                <!--begin::Modal header-->
                <div class="modal-header" id="kt_modal_details_header">
                    <!--begin::Modal title-->
                    <h1>معلومات الغرفة</h1>
                    <!--end::Modal title-->
                    <!--begin::Close-->
                    <div class="btn btn-sm btn-icon btn-active-color-primary btn-hide" data-bs-dismiss="modal">
                        <!--begin::Svg Icon | path: icons/duotune/arrows/arr061.svg-->
                        <span class="svg-icon svg-icon-1">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1" transform="rotate(-45 6 17.3137)" fill="currentColor" />
                                <rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)" fill="currentColor" />
                            </svg>
                        </span>
                        <!--end::Svg Icon-->
                    </div>
                    <!--end::Close-->
                </div>
                <!--end::Modal header-->
                <!--begin::Modal body-->
                <div class="modal-body py-10 px-lg-17">
                    <!--begin::Scroll-->
                    <div class="scroll-y me-n7 pe-7" id="kt_modal_details_scroll" data-kt-scroll="true" data-kt-scroll-activate="{default: false, lg: true}" data-kt-scroll-max-height="auto" data-kt-scroll-dependencies="#kt_modal_new_address_header" data-kt-scroll-wrappers="#kt_modal_details_scroll" data-kt-scroll-offset="300px">
                       
                        <!--begin::Input group-->
                        <div class="row mb-5">
                            <!--begin::Col-->
                            <div class="row mb-5">
                                <div class="col-md-6 fv-row">
                                    <label class="required fs-3 fw-semibold mb-2" asp-for="Number">الرقم</label>
                                    <input type="number" asp-for="Number" class="form-control fs-4 form-control-solid" disabled />
                                </div>
                                <div class="col-md-6 fv-row">
                                    <label class="required fs-3 fw-semibold mb-2" asp-for="Name">الاسم(إختياري)</label>
                                    <input type="text" asp-for="Name" class="form-control fs-4 form-control-solid" disabled />
                                </div>
                            </div>
                            <!--end::Input group-->
                            <!--begin::Input group-->
                            <div class=" flex-column mb-5 fv-row">
                                <!--begin::Label-->
                                <label class="required fs-3 fw-semibold mb-2" asp-for="Description">الوصف(إختياري)</label>
                                <!--end::Label-->
                                <!--begin::Input-->
                                <textarea asp-for="Description" class="form-control fs-4 form-control-solid" rows="6" disabled></textarea>
                                <!--end::Input-->
                            </div>
                            <!--end::Input group-->
                            <br />
                            <!--begin::Input group-->
                            <div class=" flex-column mb-5 fv-row">
                                <!--begin::Label-->
                                <label class="required fs-3 fw-semibold mb-2">الأطباء</label>
                                <!--end::Label-->
                                <!--begin::Input-->
                                <ul class="list-group" style="width: 50%; font-size:18px">
                                    @foreach (var item in Model.Doctors)
                                    {
                                        if (item.IsDeleted == 0)
                                        {
                                            <li class="list-group-item"> @item.Name</li>
                                        }
                                    }
                                </ul>
                                <!--end::Input-->
                            </div>
                            <!--end::Input group-->
                            

                    </div>
                    <!--end::Scroll-->
                </div>
                <!--end::Modal body-->
                <!--begin::Modal footer-->
                <div class="modal-footer flex-center">
                    <!--begin::Button-->
                    <button type="reset" data-bs-dismiss="modal" class="btn btn-light me-3 fs-4 btn-closee">إخفاء</button>
                    <!--end::Button-->
                    <!--begin::Button-->
                    @*<button type="submit" id="kt_modal_update_submit" class="btn btn-primary">
                    <span class="indicator-label">Update</span>
                    <span class="indicator-progress">
                    Please wait...
                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                    </span>
                    </button>*@
                    <!--end::Button-->
                </div>
                <!--end::Modal footer-->
            </form>
            <!--end::Form-->
        </div>
    </div>
</div>
<!--end::Modal - New Address-->
