    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.5/dist/sweetalert2.min.css">

    <style>
        /* Cute and lovely blue theme */
        body {
            direction: rtl; /* Keep RTL layout */
            /*background-color: #e3f2fd; /* Soft blue background */
            font-family: inherit; /* Use site-wide font */
        }

        /* Main container */
        .mcontainer {
            width: 95%;
            max-width: 1200px;
            margin: 30px auto;
            /*background-color: #ffffff; /* White container */
            border: 2px solid #90caf9; /* Light blue border */
            border-radius: 15px; /* Rounded corners */
            padding: 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .hmcontainer {
            width: 95%;
            max-width: 1200px;
            margin: 30px auto;
            /*background-color: #ffffff; /* White container */
            border: 2px solid #90caf9; /* Light blue border */
            border-radius: 15px; /* Rounded corners */
            padding: 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            align-content: center;
            text-align: center;
        }

        /* Headings */
        h2 {
            text-align: right;
            color: #1565c0; /* Deep blue */
        }

        /* Table */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 1em;
        }

        th, td {
            color: black !important;
            text-align: center;
            font-size:15px;
            padding: 8px;
            border: 1px solid #90caf9; /* Light blue borders */
            background-color: #e3f2fd; /* Very light blue for table cells */
        }

        /* Inputs */
        input[type="text"], input[type="number"], select, textarea {
            width: 90%;
            padding: 6px;
            margin: 4px 0;
            border: 1px solid #64b5f6; /* Soft blue border */
            border-radius: 5px;
            background-color: #ffffff;
            font-family: inherit;
        }

        /* Buttons */
        .btn-new, .btn-delete {
            cursor: pointer;
            padding: 8px 14px;
            border: none;
            border-radius: 5px;
            color: #fff;
            font-weight: bold;
            transition: background-color 0.3s;
        }

        .btn-new {
            background-color: #42a5f5; /* Soft blue */
            font-size: 15px;
        }

            .btn-new:hover {
                background-color: #1e88e5;
            }

        .btn-delete {
            background-color: #ef5350; /* Soft red */
        }

            .btn-delete:hover {
                background-color: #e53935;
            }

        /* Save button */
        .btn-save {
            background-color: #1e88e5; /* Blue */
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 15px;
            font-weight: bold;
            float: left;
            transition: background-color 0.3s;
        }

            .btn-save:hover {
                background-color: #1565c0;
            }

        /* Teeth representation table */
        .teeth-table {
            border-collapse: separate;
            border-spacing: 3px;
            margin: 0 auto;
        }

            .teeth-table td {
                background-color: #ffffff;
                border: 1px solid #90caf9;
                border-radius: 4px;
                width: 30px;
                text-align: center;
                padding: 6px;
            }

                .teeth-table td:hover {
                    background-color: #bbdefb; /* Light blue hover */
                }

        .midline {
            color: blue;
            border-left: 3px solid #1565c0 !important;
        }

        .teeth-table input[type="radio"] {
            transform: scale(1.2);
            margin-bottom: 5px;
            cursor: pointer;
        }

        /* Notes */
        .notes-area {
            width: 100%;
            min-height: 80px;
            border: 1px solid #64b5f6;
            border-radius: 5px;
        }

        .mainData {
            font-size: 22px;
            color: #1565c0;
        }

        .file{
            width: 100%;
            border: 1px solid #64b5f6;
            border-radius: 5px;
        }

        .visit-badge {
            background-color: #90caf9;
            color: #fff;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 14px;
        }

    </style>
}


